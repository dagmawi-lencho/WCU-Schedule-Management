{
  "name": "wcu-schedule-management",
  "version": "1.0.0",
  "description": "Online Class Scheduling System for University Batches",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "vercel-build": "cd frontend && npm install && npm run build"
  },
  "keywords": ["scheduling", "university", "class-management"],
  "author": "Dagmawi Lencho",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@vercel/node": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
